// ===================================================
// FILE: schema.prisma
// PATH: /restaurant-qr-order/prisma/schema.prisma
// DESCRIPTION: Prisma Database Schema สำหรับระบบร้านอาหาร
// ===================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ตาราง Admin - ผู้ดูแลระบบ
model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique @db.VarChar(50)
  password  String   @db.VarChar(255)
  name      String   @db.VarChar(100)
  role      String   @default("admin") @db.VarChar(20)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

// ตาราง Category - หมวดหมู่อาหาร
model Category {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(100)
  description String?   @db.Text
  sortOrder   Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  menuItems   MenuItem[]

  @@map("categories")
}

// ตาราง MenuItem - รายการอาหาร
model MenuItem {
  id          Int         @id @default(autoincrement())
  categoryId  Int
  name        String      @db.VarChar(150)
  description String?     @db.Text
  price       Decimal     @db.Decimal(10, 2)
  image       String?     @db.VarChar(255)
  maxPerOrder Int         @default(10) // จำกัดจำนวนสั่งต่อครั้ง
  isAvailable Boolean     @default(true)
  isActive    Boolean     @default(true)
  sortOrder   Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  category    Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  orderItems  OrderItem[]

  @@index([categoryId])
  @@map("menu_items")
}

// ตาราง Table - โต๊ะ
model Table {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(50)
  qrCode      String    @unique @db.VarChar(255)
  qrToken     String    @unique @db.VarChar(100) // Token สำหรับ URL
  isActive    Boolean   @default(true)
  isOccupied  Boolean   @default(false) // โต๊ะถูกใช้งานอยู่หรือไม่
  sortOrder   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  orders      Order[]
  sessions    TableSession[]

  @@map("tables")
}

// ตาราง TableSession - Session ของโต๊ะ (สำหรับลูกค้า)
model TableSession {
  id          Int       @id @default(autoincrement())
  tableId     Int
  sessionToken String   @unique @db.VarChar(100)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  expiresAt   DateTime
  table       Table     @relation(fields: [tableId], references: [id], onDelete: Cascade)
  orders      Order[]

  @@index([tableId])
  @@map("table_sessions")
}

// ตาราง Order - รายการสั่งซื้อ
model Order {
  id              Int           @id @default(autoincrement())
  tableId         Int
  tableSessionId  Int?
  orderNumber     String        @unique @db.VarChar(20)
  status          OrderStatus   @default(PENDING)
  totalAmount     Decimal       @db.Decimal(10, 2)
  notes           String?       @db.Text
  adminMessage    String?       @db.Text // ข้อความจาก Admin ถึงโต๊ะ
  isNotified      Boolean       @default(false) // แจ้งเตือนแล้วหรือยัง
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  confirmedAt     DateTime?
  cancelledAt     DateTime?
  completedAt     DateTime?
  table           Table         @relation(fields: [tableId], references: [id], onDelete: Cascade)
  tableSession    TableSession? @relation(fields: [tableSessionId], references: [id], onDelete: SetNull)
  orderItems      OrderItem[]

  @@index([tableId])
  @@index([status])
  @@map("orders")
}

// Enum สถานะ Order
enum OrderStatus {
  PENDING     // รอยืนยัน
  CONFIRMED   // ยืนยันแล้ว
  PREPARING   // กำลังเตรียม
  READY       // พร้อมเสิร์ฟ
  COMPLETED   // เสร็จสิ้น
  CANCELLED   // ยกเลิก
}

// ตาราง OrderItem - รายการอาหารในแต่ละ Order
model OrderItem {
  id          Int       @id @default(autoincrement())
  orderId     Int
  menuItemId  Int
  quantity    Int
  unitPrice   Decimal   @db.Decimal(10, 2)
  totalPrice  Decimal   @db.Decimal(10, 2)
  notes       String?   @db.VarChar(255)
  createdAt   DateTime  @default(now())
  order       Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem    MenuItem  @relation(fields: [menuItemId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([menuItemId])
  @@map("order_items")
}

// ตาราง Settings - การตั้งค่าระบบ
model Settings {
  id              Int      @id @default(autoincrement())
  restaurantName  String   @db.VarChar(100)
  logo            String?  @db.VarChar(255)
  soundEnabled    Boolean  @default(true)
  notifyEnabled   Boolean  @default(true)
  showPrices      Boolean  @default(true) // แสดงราคา (ปิดกรณีบุฟเฟ่ต์)
  isBuffetMode    Boolean  @default(false) // โหมดบุฟเฟ่ต์
  buffetPrice     Decimal? @db.Decimal(10, 2) // ราคาบุฟเฟ่ต์
  currency        String   @default("THB") @db.VarChar(10)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("settings")
}

// ตาราง DailySummary - สรุปยอดขายรายวัน
model DailySummary {
  id              Int      @id @default(autoincrement())
  date            DateTime @db.Date
  totalOrders     Int      @default(0)
  totalAmount     Decimal  @db.Decimal(12, 2)
  confirmedOrders Int      @default(0)
  cancelledOrders Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([date])
  @@map("daily_summaries")
}
